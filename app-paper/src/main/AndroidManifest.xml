<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.paper"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:name=".view.PaperApplication"
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="false"
        android:theme="@style/AppTheme.CustomToolbar">

        <!-- Splash Screen -->
        <activity
            android:name=".view.SplashScreenActivity"
            android:theme="@style/AppTheme.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <!-- Start Page -->
        <activity
            android:name=".view.MyPaperGalleryActivity">
        </activity>

        <!-- Main Editor -->
        <activity
            android:name=".view.PaperEditorActivity">
        </activity>

        <!-- Sketch Editor -->
        <activity
            android:name="com.cardinalblue.lib.doodle.view.SketchEditorActivity">
        </activity>

        <!-- Experiments -->
        <activity android:name=".view.ExampleOfRxCancelActivity"/>
        <activity android:name=".view.ExampleOfCiceroneActivity1"/>
        <activity android:name=".view.ExampleOfCiceroneActivity2" />
        <activity android:name=".view.ExampleOfConvexHullActivity"/>
        <activity android:name=".view.ExampleOfEventDrivenSimulationActivity"/>

        <!-- ContentProvider ///////////////////////////////////////////////-->

        <!-- Paper Database -->
        <provider
            android:name="com.paper.shared.model.repository.sqlite.PaperContentProvider"
            android:authorities="${packageName}"/>
    </application>
</manifest>
