<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/default_thumb_width"
    android:layout_height="@dimen/default_thumb_height"
    android:clipToPadding="false"
    android:padding="8dp">

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/txt_tap_to_create"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_dashed_round_rect"
        android:gravity="center"
        android:scaleType="centerCrop"
        android:text="@string/msg_create_cta"
        android:textSize="20sp"/>
</android.support.constraint.ConstraintLayout>
