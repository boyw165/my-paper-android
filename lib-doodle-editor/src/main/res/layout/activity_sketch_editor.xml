<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    tools:context=".SketchEditorActivity">

    <com.cardinalblue.lib.doodle.view.SketchView
        android:id="@+id/sketch_editor"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- Navigation bar -->
    <android.support.constraint.ConstraintLayout
        android:id="@+id/navigation_bar"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:background="@color/bg_nav_bar"
        android:clipChildren="false"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Close Button -->
        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/btn_close"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="13dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/icon_e_d_close"/>

        <!-- Clear Button -->
        <TextView
            android:id="@+id/btn_clear"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginLeft="13dp"
            android:gravity="center"
            android:lines="1"
            android:text="@string/doodle_clear_button"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/icon_e_d_close"/>

        <!-- Undo Button -->
        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/btn_undo"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginRight="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/btn_redo"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/selector_icon_undo"/>

        <!-- Redo Button -->
        <android.support.v7.widget.AppCompatImageView
            android:id="@id/btn_redo"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginLeft="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/btn_undo"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/selector_icon_redo"/>

        <!-- Done Button -->
        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/btn_done"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="13dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/selector_icon_check"/>
    </android.support.constraint.ConstraintLayout>

    <!-- Bottom bar background -->
    <View
        android:id="@+id/bottom_bar_background"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:background="@drawable/bg_bottom_bar_gradient"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <!-- Brush Stroke Width -->
    <com.cardinalblue.lib.doodle.view.BrushSizeSeekBar
        android:id="@+id/brush_size_picker"
        android:layout_width="0dp"
        android:layout_height="42dp"
        android:maxHeight="64dp"
        android:minHeight="64dp"
        android:minWidth="250dp"
        android:paddingLeft="60dp"
        android:paddingRight="60dp"
        app:layout_constraintBottom_toTopOf="@+id/brush_picker"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <!-- Brush Picker -->
    <android.support.v7.widget.RecyclerView
        android:id="@+id/brush_picker"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:orientation="horizontal"
        android:paddingTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
</android.support.constraint.ConstraintLayout>
